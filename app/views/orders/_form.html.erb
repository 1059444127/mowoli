<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for(:patients_name_attributes) do |name| %>
    <%= field_set_tag 'Patient' do %>
      <div class="field">
        <%= f.label :patient_id %><br>
        <%= f.text_field :patient_id %>
      </div>

      <div class="field">
        <%= name.label :family, 'Nachname' %><br>
        <%= name.text_field :family %>
      </div>

      <div class="field">
        <%= name.label :given, 'Vorname' %><br>
        <%= name.text_field :given %>
      </div>

      <div class="field">
        <%= name.label :prefix, 'Titel' %><br>
        <%= name.text_field :prefix %>
      </div>

      <div class="field">
        <%= f.label :patients_birth_date %><br>
        <%= f.text_field :patients_birth_date %>
      </div>

      <div class="field">
        <%= f.label(:patients_sex) %><br>
        <%= f.radio_button(:patients_sex, 'M') %>
        <%= f.label(:patients_sex, 'männlich', value: 'M') %>
        <%= f.radio_button(:patients_sex, 'F') %>
        <%= f.label(:patients_sex, 'weiblich', value: 'F') %>
      </div>
    <% end %>
  <% end %>

  <%= f.fields_for(:referring_physicians_name_attributes) do |name| %>
    <%= field_set_tag 'Überweisender Arzt' do %>
      <div class="field">
        <%= name.label :family, 'Nachname' %><br>
        <%= name.text_field :family %>
      </div>

      <div class="field">
        <%= name.label :given, 'Vorname' %><br>
        <%= name.text_field :given %>
      </div>

      <div class="field">
        <%= name.label :prefix, 'Titel' %><br>
        <%= name.text_field :prefix %>
      </div>
    <% end %>
  <% end %>

  <%= field_set_tag 'Untersuchung' do %>
    <div class="field">
      <%= f.label :requested_procedure_description %><br>
      <%= f.text_field :requested_procedure_description %>
    </div>

    <div class="field">
      <%= f.label :station_id %><br>
      <%= f.select :station_id, Station.all.collect { |s| [ s.name, s.id ] }, {include_blank: true} %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
